<h2>Create New Customer</h2>

<form method="post">
    Full Name: <input type="text" name="fullName" class="form-control" />

    Birthday: <input type="date" min="1994-01-01" max="2018-12-31" name="birthday" class="form-control" />

    Gender: 
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" id="Male" value="Male" checked>
      <label class="form-check-label" for="Male">
        Male
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" id="Female" value="Female">
      <label class="form-check-label" for="Female">
        Female
      </label>
    </div>
    <br />

    Phone Number: <input type="text" name="phoneNumber" class="form-control" />

    Email: <input type="email" name="email" class="form-control" />
    <br />

    <input type="submit" value="Submit" class="btn btn-success" />
    <a href="/customers" class="btn btn-outline-primary">Back</a>
</form>